<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen"
    android:orientation="vertical"
    android:background="@drawable/main">

    <TextView
        android:id="@+id/title"
        android:layout_marginTop="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/app_name"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/regular"
        android:textColor="@color/colorGreen"/>

    <VideoView
        android:id="@+id/videoFeed"
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:layout_height="240sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-150sp">

        <ImageButton
            android:id="@+id/previousVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_alignParentStart="true"
            android:backgroundTint="@color/transparent"
            android:contentDescription="@string/previous_video" />

        <ImageButton
            android:id="@+id/nextVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next"
            android:layout_gravity="center"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/transparent"
            android:contentDescription="@string/next_video" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27sp"
                android:layout_marginTop="27sp"
                android:fontFamily="@font/regular"
                android:text="@string/personal"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View style="@style/Divider.Horizontal"
                android:layout_marginStart="27sp"
                android:layout_marginTop="5sp"/>

            <TextView
                android:id="@+id/alertHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alert_history"
                android:layout_marginTop="35sp"
                android:layout_marginStart="27sp"
                android:fontFamily="@font/regular"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"/>

            <View style="@style/Divider.Horizontal"
                android:layout_marginStart="27sp"
                android:layout_marginTop="5sp"/>

            <TextView
                android:id="@+id/addCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_camera"
                android:layout_marginTop="35sp"
                android:layout_marginStart="27sp"
                android:fontFamily="@font/regular"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"/>

            <View style="@style/Divider.Horizontal"
                android:layout_marginStart="27sp"
                android:layout_marginTop="5sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recent"
                android:textColor="@color/colorWhite"
                android:textSize="24sp"
                android:fontFamily="@font/regular"
                android:layout_gravity="center_horizontal"/>

            <ListView
                android:id="@+id/recentClips"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100sp">

        <TextView
            android:id="@+id/signOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10sp"
            android:layout_marginStart="27sp"
            android:text="@string/signOut"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:background="#00000000"/>

    </LinearLayout>
</LinearLayout>